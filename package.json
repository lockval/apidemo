{
  "name": "apidemo.lockval",
  "version": "1.0.0",
  "scripts": {
    "build": "run-p serverJsBuildAndUpload clientBuild",
    "buildBothAndPreview": "run-s lint build vitePreview",
    "buildClientAndPreview": "run-s lint clientBuild vitePreview",

    "dev": "vite",
    "viteBuild": "vite build",
    "vitePreview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",

    "clientCheckBuild": "run-p type-check viteBuild",
    "clientYAML2JSON": "yaml2json client.yaml > ./src/assets/client.json",
    "clientMakePlayer": "node ./makeplayer.js",
    "clientGen": "run-s clientYAML2JSON clientMakePlayer",
    "clientBuild": "run-s clientGen clientCheckBuild",


    "serverUploadJS": "node ./updatefile.js dist/main.js",
    "serverGenJS": "tsc --project ./public/server/javascript/tsconfig.json",
    "serverJsBuildAndUpload": "run-s serverGenJS serverUploadJS",

    "serverUploadStar": "node ./updatefile.js dist/main.sbin",
    "serverGenStar": "starc2one -file public/server/starlark/src -output dist/main.sbin -suffix .star",
    "serverStarBuildAndUpload": "run-s serverGenStar serverUploadStar",

    "serverUploadLua": "node ./updatefile.js dist/main.lua",
    "serverGenLua": "cd public/server/lua && node ./build.js",
    "serverLuaBuildAndUpload": "run-s serverGenLua serverUploadLua"
  },
  "dependencies": {
    "@highlightjs/vue-plugin": "^2.1.0",
    "@kangc/v-md-editor": "^2.3.15",
    "vue": "^3.2.41",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/node": "^16.11.68",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "mustache": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "~4.7.4",
    "vite": "^3.1.8",
    "vue-tsc": "^1.0.8",
    "yamljs": "^0.3.0"
  }
}
